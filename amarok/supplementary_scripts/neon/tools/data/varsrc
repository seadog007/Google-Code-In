export NEONDIR=/opt/amarok-nightly

export PATH=$NEONDIR/bin:$PATH
export LD_LIBRARY_PATH=$NEONDIR/lib
export PKG_CONFIG_PATH=$NEONDIR/lib/pkgconfig
export QT_PLUGIN_PATH=$NEONDIR/lib/kde4/plugins:$QT_PLUGIN_PATH
export QTDIR=$NEONDIR
export KDEDIR=$NEONDIR
export KDEHOME=~/.amarok-nightly
export KDETMP=/tmp/$USER-amarok-nightly
mkdir -p $KDETMP
export KDEDIRS=$KDEDIR

export CMAKE_LIBRARY_PATH=$NEONDIR/lib:$CMAKE_LIBRARY_PATH
export CMAKE_INCLUDE_PATH=$NEONDIR/include:$CMAKE_LIBRARY_PATH
